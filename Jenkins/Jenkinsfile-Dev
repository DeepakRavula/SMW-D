
pipeline {
    agent any

    stages {
        stage('Deploy') {
            steps {
                script {
                    sshagent(['smw-dev-instance']) {
                            sh """ssh -t -t ubuntu@3.98.69.25 -o StrictHostKeyChecking=no << EOF 
                                cd /srv/smw
                                pwd
                                git pull
                                composer install
                                php console/yii migrate
                                exit 
                                EOF"""
                    }
              }
            }
        }
        post {
            success {
                slackSend "Build deployed successfully - ${env.JOB_NAME} ${env.BUILD_NUMBER} (<${env.BUILD_URL}|Open>)"
            }
        }

    }
}
